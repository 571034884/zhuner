<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.ChoiceCityActivity">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="44px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/check_currency"
            android:textColor="#333"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/iv_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:src="@mipmap/tq_guanbi" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hotcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门城市"
        android:textColor="#999"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintLeft_toLeftOf="@id/ll"
        android:layout_marginTop="@dimen/px_64"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_marginTop="@dimen/px_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        app:layout_constraintTop_toBottomOf="@id/tv_hotcity">
    </android.support.v7.widget.RecyclerView>

    <com.aibabel.fyt_exitandentry.utils.PinnedHeaderListView
        android:id="@+id/rv_currency"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="@dimen/px_44"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv" />

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="66px"
        android:layout_height="66px"
        android:background="@drawable/shape_slide_grey"
        android:gravity="center"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="35px"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll"
        tools:visibility="visible" />

    <com.aibabel.fyt_exitandentry.utils.SideBar
        android:id="@+id/sb_sort"
        android:layout_width="30px"
        android:layout_height="0px"
        android:layout_marginBottom="50px"
        android:layout_marginTop="164px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll" />
</android.support.constraint.ConstraintLayout>