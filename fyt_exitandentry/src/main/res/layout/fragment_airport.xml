    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_rujingka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/px_8"
            android:drawableTop="@mipmap/rujingkatubiao"
            android:text="入境卡模板"
            android:textColor="#333"
            android:textSize="@dimen/px_30" />

        <LinearLayout
            android:id="@+id/rujinka_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rujingka"
            android:layout_marginTop="@dimen/px_24"
            android:background="@drawable/ret_loading_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rujingka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x14"
                android:layout_marginTop="@dimen/y10"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/y959"
                android:maxWidth="@dimen/x500"
                android:src="@mipmap/churujin" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rujinka_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_100"
            android:drawablePadding="@dimen/px_8"
            android:drawableTop="@mipmap/jichangzhishitu"
            android:text="机场指示图"
            android:textColor="#333"
            android:textSize="@dimen/px_30" />

        <LinearLayout
            android:id="@+id/ll_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_airport"
            android:orientation="vertical">




                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_airport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_24"
                    android:background="@drawable/ret_loading_corner"
                    android:fillViewport="true"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/px_16"
                    android:paddingTop="@dimen/px_16"
                    android:scrollbars="none"
                    android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_airport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_100"
            android:drawablePadding="@dimen/px_8"
            android:drawableTop="@mipmap/jichangjiaotong"
            android:text="机场交通"
            android:textColor="#333"
            android:textSize="@dimen/px_30" />

        <LinearLayout
            android:id="@+id/ll_traffic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_traffic"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_traffic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"

                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_24"
                android:lineSpacingExtra="@dimen/px_12"
                android:text="将来无论你们走到哪里，无论从事什么职业，都应该记住一句话，天使能够飞翔，是因为把自己看得很轻。"
                android:textColor="#333333"
                android:textSize="@dimen/px_24"
                android:visibility="gone" />
        </LinearLayout>

