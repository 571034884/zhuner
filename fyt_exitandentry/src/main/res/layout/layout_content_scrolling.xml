<?xml version="1.0" encoding="utf-8"?>
<com.aibabel.fyt_exitandentry.utils.ScrollviewNestedRecyclerview  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/airport_cl_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                app:tabIndicatorColor="#ff0000"
                app:tabIndicatorHeight="@dimen/px_4"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#ff0000"
                app:tabTextAppearance="@style/TabLayoutTextSize"
                app:tabTextColor="#333" />

            <com.aibabel.fyt_exitandentry.utils.WrapContentHeightViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回到顶部" />
    </LinearLayout>

</com.aibabel.fyt_exitandentry.utils.ScrollviewNestedRecyclerview>