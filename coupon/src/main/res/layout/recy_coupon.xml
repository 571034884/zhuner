<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y8"
    android:background="@mipmap/coupon">

    <TextView
        android:id="@+id/tv_jiaobiao_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/jiaobiao"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/y24"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/rl_popu"
            android:layout_width="@dimen/x372"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_shop_img"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:scaleType="fitXY"
                 />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_shop_img"
                android:layout_marginLeft="@dimen/x14"
                android:layout_toRightOf="@id/iv_shop_img"
                android:ellipsize="end"
                android:maxLines="1"

                android:textColor="#fff"
                android:textSize="@dimen/y28" />

            <TextView
                android:id="@+id/tv_shop_price"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_name"
                android:layout_marginLeft="@dimen/x14"
                android:layout_toRightOf="@id/iv_shop_img"
                android:ellipsize="end"
                android:maxLines="1"

                android:textColor="#fff"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/tv_shop_details"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_price"
                android:layout_marginLeft="@dimen/x14"
                android:layout_toRightOf="@id/iv_shop_img"
                android:ellipsize="end"
                android:maxLines="1"

                android:textColor="#fff"
                android:textSize="@dimen/y20" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_receive"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/y168"
            android:layout_toRightOf="@id/rl_popu"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="@dimen/x118"
                android:layout_height="@dimen/y45"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x12"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="@dimen/y30" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
