<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/px460"
    android:layout_height="wrap_content"
    android:background="@drawable/coupon_background">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/px140"
        android:layout_height="@dimen/px140"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px72"
        android:layout_marginBottom="@dimen/px30"
        android:src="@mipmap/song1"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:lineSpacingExtra="@dimen/px16"
        android:layout_marginBottom="@dimen/px72"
        android:textColor="#808080"
        android:textSize="@dimen/px24"
        android:text="松本清 是日本最大的药妆连锁店，是国人最为熟悉的一家店。药品化妆品一应俱全。资生堂、SKll、KOSE、"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close"

        android:layout_marginTop="@dimen/px24"
        android:layout_marginLeft="400px"
        />

</RelativeLayout>