<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_coupon"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="@dimen/px14"
        android:layout_marginRight="@dimen/px14"
        android:layout_marginTop="@dimen/px30"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:visibility="gone"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d2d2d2"
        app:layout_constraintBottom_toTopOf="@id/lin" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="74px"
        android:background="#eeeeee"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mudidi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/mudidi_no"
                android:gravity="center"
                android:text="目的地"
                android:textColor="#c2c2c2"
                android:textSize="@dimen/px28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/my_coupon_no"
                android:gravity="center"
                android:text="优惠券"
                android:textColor="#c2c2c2"
                android:textSize="@dimen/px28" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
