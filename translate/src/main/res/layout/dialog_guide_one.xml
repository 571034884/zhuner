<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/bg_dialog_round"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="38px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_guide_img"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:text="准儿翻译新模式上线啦"
                android:textSize="32px"
                android:textColor="#333333"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:layout_marginBottom="12px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/ic_left_guide"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能翻译"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="44px"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_guide"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按任意翻译键，录入语音"
                android:textSize="32px"
                android:layout_marginBottom="12px"
                android:textColor="#333333"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能识别语种，实时互译"
                android:textSize="32px"
                android:layout_marginBottom="38px"
                android:textColor="#333333"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="58px"
                android:textSize="24px"
                android:lineSpacingMultiplier="1.1"
                android:textColor="#999999"
                android:text="目前暂支持中英语种互译，更多\n语种正在飞速研发中..."
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_height="1px" />
        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center"
            android:text="我知道啦"
            android:textSize="30px"
            android:textColor="#ff0000" />
    </LinearLayout>

</RelativeLayout>