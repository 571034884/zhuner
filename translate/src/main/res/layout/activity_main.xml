<?xml version="1.0" encoding="utf-8"?>
<com.aibabel.translate.view.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 左侧侧拉 -->

    <include layout="@layout/menuleft_slide" />

    <LinearLayout
      android:id="@+id/ml_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/fl_translate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/mian_close_img"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:src="@mipmap/close"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</com.aibabel.translate.view.DragLayout>