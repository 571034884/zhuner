<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_result_count_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginStart="10px"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_music"

        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@drawable/shape_music_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_marginStart="20px"
                android:layout_marginLeft="20px"
                android:background="@drawable/shape_icon"

                />


            <TextView
                android:id="@+id/item_result_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:text="计算器"
                android:textColor="@color/music_circle"
                android:textSize="26px" />


        </LinearLayout>
        <TextView
            android:id="@+id/item_result_count_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/font_666"
            android:layout_marginTop="30px"
            android:textSize="32px"
            android:text="20*5="
            android:gravity="center"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            />

        <TextView
            android:id="@+id/item_result_count_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:gravity="center"
            android:textColor="@color/mainbg"
            android:textStyle="bold"
            android:textSize="42px"
            android:text="100"
            android:layout_marginTop="26px"
            android:layout_marginBottom="42px"
            />




    </LinearLayout>

</LinearLayout>