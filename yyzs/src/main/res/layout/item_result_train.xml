<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_result_train_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginStart="30px"
        android:layout_marginTop="50px"
        android:lineSpacingExtra="14px"
        android:text="准儿"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40px" />

    <LinearLayout
        android:id="@+id/item_result_train_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginStart="10px"
        android:layout_marginTop="50px"
        android:background="@drawable/shape_music"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@drawable/shape_music_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_marginStart="20px"
                android:layout_marginLeft="20px"
                android:background="@drawable/shape_icon"

                />

            <TextView
                android:id="@+id/item_result_train_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:text="车次信息"
                android:textColor="@color/music_circle"
                android:textSize="26px" />


        </LinearLayout>



        <WebView
            android:id="@+id/item_result_train_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:minHeight="210px"
            android:visibility="gone"
            ></WebView>
        <TextView
            android:id="@+id/item_result_train_loading"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="center"

            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_marginTop="80px"
            android:layout_marginBottom="80px"
            />



    </LinearLayout>




</LinearLayout>