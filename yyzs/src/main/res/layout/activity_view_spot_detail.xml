<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ViewSpotDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/mainbg">

        <ImageButton
            android:id="@+id/activity_viewstop_detail_left_return"
            android:layout_width="wrap_content"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:background="@null"
            android:src="@mipmap/left_jt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信息详情"
            android:textColor="@color/white"
            android:textSize="36px" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/activity_viewstop_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="30px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px" />

            <TextView
                android:id="@+id/activity_viewstop_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px" />

            <TextView
                android:id="@+id/activity_viewstop_detail_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px" />

            <TextView
                android:id="@+id/activity_viewstop_detail_featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/activity_viewstop_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px" />

            <TextView
                android:id="@+id/activity_viewstop_detail_tishi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="6px"
                android:text="海事博物馆"
                android:textColor="@color/mainbg"
                android:textSize="24px" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>