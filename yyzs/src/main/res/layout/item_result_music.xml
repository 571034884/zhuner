<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_result_music_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginStart="30px"
        android:layout_marginTop="50px"
        android:lineSpacingExtra="14px"
        android:text="准儿"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40px" />
    <LinearLayout
        android:id="@+id/item_result_music_ll"
    android:layout_width="match_parent"
    android:layout_height="560px"
    android:layout_marginEnd="10px"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginStart="10px"
    android:layout_marginTop="50px"
    android:background="@drawable/shape_music"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="@drawable/shape_music_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_marginStart="20px"
            android:layout_marginLeft="20px"
            android:background="@drawable/shape_icon"

            />

        <TextView
            android:id="@+id/item_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginStart="10px"
            android:text="Music Player"
            android:textColor="@color/music_circle"
            android:textSize="26px" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:id="@+id/item_result_music_rl"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_music_circle">

            <ImageView
                android:layout_width="250px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_result_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="暖暖"
                    android:maxEms="5"
                    android:textColor="@color/white"

                    android:textSize="36px" />

                <TextView
                    android:id="@+id/item_result_music_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="梁静茹"
                    android:textColor="@color/music_tv"

                    android:textSize="18px" />

            </LinearLayout>


        </RelativeLayout>
        <ProgressBar
            android:id="@+id/item_result_music_pb"
            android:layout_marginTop="45px"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/item_result_music_rl"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/pb_music"
            android:layout_marginLeft="70px"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:layout_marginRight="70px"

            />
        <TextView
            android:id="@+id/item_result_music_start_time_tv"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_result_music_pb"
            android:textColor="@color/mainbg"
            android:layout_marginTop="8px"
            android:textSize="20px"
            android:layout_marginLeft="52px"
            android:layout_marginStart="52px"
            />
        <TextView
            android:id="@+id/item_result_music_end_time_tv"
            android:text="03:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_result_music_pb"
            android:textColor="@color/mainbg"
            android:layout_marginTop="8px"
            android:textSize="20px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="52px"
            android:layout_marginEnd="52px"
            />
        <ImageButton
            android:id="@+id/item_result_music_imgbtn"
            android:layout_below="@+id/item_result_music_pb"
            android:layout_width="38px"
            android:layout_height="65px"
            android:layout_marginTop="60px"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/musicplay"
            android:background="@null"
            android:scaleType="fitXY"
            />


    </RelativeLayout>



</LinearLayout>





</LinearLayout>