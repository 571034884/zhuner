<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_result_select_setout_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginStart="30px"
        android:layout_marginTop="50px"
        android:lineSpacingExtra="14px"
        android:text="准儿"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40px" />

    <TextView
        android:id="@+id/item_result_select_setout_my"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="32px"
        android:gravity="center"
        android:layout_marginTop="50px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="@color/ProgressBar_line"
         android:text="从当前位置出发"
        android:background="@drawable/shape_select_setout"
        />
    <TextView
        android:id="@+id/item_result_select_setout_other"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="32px"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="@color/ProgressBar_line"
        android:text="从其他位置出发"
        android:background="@drawable/shape_select_setout"
        />



</LinearLayout>