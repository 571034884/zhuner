<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_result_map_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginStart="30px"
        android:layout_marginTop="50px"
        android:lineSpacingExtra="14px"
        android:text="准儿"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginStart="10px"
        android:layout_marginTop="50px"
        android:paddingBottom="30px"
        android:background="@drawable/shape_music"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@drawable/shape_music_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_marginStart="20px"
                android:layout_marginLeft="20px"
                android:background="@drawable/shape_icon"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:text="地图"
                android:textColor="@color/music_circle"
                android:textSize="26px" />


        </LinearLayout>

        <TextView
            android:id="@+id/item_result_map_to"
            android:text="北京赛特奥莱"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="50px"
            android:layout_gravity="center_horizontal"
            android:textSize="32px"
            android:textColor="@color/mainbg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6px"
            android:background="@color/line"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            />
        <TextView
            android:id="@+id/item_result_map_form"
            android:text="打得开回家\n点技能\n多好多好"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:textColor="@color/mainbg"
            android:textSize="20px"
            android:lineSpacingExtra="9px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_result_map_btn"
            android:text="路线"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="30px"
            android:background="@drawable/shape_juse"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textSize="30px"
            />


        <RelativeLayout
            android:id="@+id/item_result_map_rl"
            android:layout_width="match_parent"
            android:layout_height="280px"

            android:layout_marginLeft="10px"
            android:layout_marginStart="10px"
            android:layout_marginRight="10px"
            android:layout_marginEnd="10px"
            android:layout_marginTop="10px"
            >
            <com.baidu.mapapi.map.MapView
                android:id="@+id/item_result_map_mmap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
            </com.baidu.mapapi.map.MapView>
            <View
                android:background="@drawable/map_bg1"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@drawable/map_bg2"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>



    </LinearLayout>




</LinearLayout>