<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:id="@+id/item_child_result_search_list_rl"
        >
        <ImageView
            android:id="@+id/item_child_result_search_list_img"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25px"
            android:layout_marginRight="20px"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/item_child_result_search_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainbg"
            android:textSize="32px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="25px"
            android:text="星巴克 (五道口店)"
            android:singleLine="true"
            android:maxEms="9"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/item_child_result_search_list_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainbg"
            android:textSize="20px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="12px"
            android:text="星巴克 (五道口店)"
            android:layout_below="@+id/item_child_result_search_list_name"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginTop="12px"
            android:gravity="center_vertical"
            android:layout_below="@+id/item_child_result_search_list_juli"
            >
            <RatingBar
                android:id="@+id/item_child_result_search_list_pingfen"
                android:layout_width="120px"
                android:layout_height="21px"
                android:numStars="5"
                style="@style/foodRatingBar"
               android:rating="0"
                />
            <TextView
                android:id="@+id/item_child_result_search_list_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7c7c7c"
                android:textSize="20px"
                android:text=""
                android:layout_marginLeft="25px"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="#828282"
        />

</LinearLayout>