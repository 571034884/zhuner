<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp"/>
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/ProgressBar_line_normal"
                android:startColor="@color/ProgressBar_line_normal"/>
        </shape>
    </item>
    <!-- 第二进度条样式，用不怎么到直接设置成了和背景色一样的颜色，隐藏起来 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/ProgressBar_line_normal"
                    android:startColor="@color/ProgressBar_line_normal"/>
            </shape>
        </clip>
    </item>
    <!-- 第一进度条样式，我想修改的，修改成简单的灰色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- 圆角设置 -->
                <corners android:radius="2dp"/>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/ProgressBar_line"
                    android:startColor="@color/ProgressBar_line"/>
            </shape>
        </clip>
    </item>
</layer-list>