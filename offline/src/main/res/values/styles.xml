    <style name="NumberProgressBar_Funny_download">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#d2d2d2</item>
        <item name="progress_reached_color">@color/color_fe5000</item>
        <item name="progress_text_size">18sp</item>
        <item name="progress_text_color">@color/color_fe5000</item>

        <item name="progress_reached_bar_height">3px</item>
        <item name="progress_unreached_bar_height">3px</item>

        <item name="android:progressDrawable">@drawable/number_progressbar_color</item>

    </style>


