<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    >
    <RelativeLayout
        android:layout_width="504px"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ffffff"
        >
        <TextView
            android:id="@+id/dialog_title"
            android:text="卸载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_131313"
            android:textSize="32px"
            android:textStyle="bold"
            android:layout_marginTop="50px"
            />
        <TextView
            android:id="@+id/dialog_desc"
            android:text="卸载后其所有数据也将被删除"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_303030"
            android:textSize="24px"
            android:layout_marginTop="28px"
            android:layout_below="@id/dialog_title"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:layout_marginBottom="54px"
            android:gravity="center_horizontal"
            />
        <View
            android:id="@+id/dialog_line_h"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bfbfbf"
            android:layout_below="@id/dialog_desc"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92px"
            android:layout_below="@id/dialog_line_h"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:text="@string/quxiao"
                android:gravity="center"
                android:textSize="28px"
                android:textColor="@color/color_303030"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_bfbfbf"

                />
            <TextView
                android:id="@+id/dialog_tv_sure"
                android:text="@string/queding"
                android:gravity="center"
                android:textSize="28px"
                android:textColor="@color/color_fe5000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>