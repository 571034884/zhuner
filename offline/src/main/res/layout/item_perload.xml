<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/item_preload_top_rl"
        android:layout_width="match_parent"
        android:layout_height="90px"

        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/item_preload_title"

            android:text="语音翻译"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_131313"
            android:textSize="30px"
            android:layout_marginBottom="14px"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@color/color_131313"
             android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_preload_parent_swipeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        >

        <LinearLayout
            android:layout_width="120px"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_perload_delect1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="30px"
                android:text="删除"
                android:background="@color/color_fe5000"


                />
        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginRight="16px"
            >
            <ImageView
                android:id="@+id/item_preload_shibai_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xzsb"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:visibility="gone"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_preload_shibai_iv"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/item_preload_name"
                    android:text="景区导览（中国大陆）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:textColor="@color/color_131313"
                    />

                <TextView
                    android:id="@+id/item_preload_size"
                    android:text="191.36MB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="14px"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_preload_rl"
                android:layout_width="130px"
                android:layout_height="64px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_fe5000"
                >

                <!-- <ProgressBar
                     android:id="@+id/item_preload_prog"
                     android:layout_width="130px"
                     android:layout_height="64px"
                     android:progressDrawable="@drawable/progress_color"
                     style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                     />-->
                <TextView
                    android:id="@+id/item_preload_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="安装"
                    android:textColor="@color/color_fe5000"
                    android:textSize="24px"
                    />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bfbfbf"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>