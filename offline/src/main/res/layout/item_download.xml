<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_dl_swipeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        >

        <LinearLayout
            android:layout_width="120px"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_dl_delect1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="30px"
                android:text="@string/shanchu"
                android:background="@color/color_fe5000"


                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130px"

            android:layout_marginRight="16px"
            >
            <TextView
                android:id="@+id/item_dl_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/item_dl_shibai_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xzsb"
                android:layout_centerVertical="true"
                android:layout_marginRight="16px"
                android:visibility="gone"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_dl_shibai_iv"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/item_dl_title"
                    android:text="景区导览（中国大陆）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:textColor="@color/color_131313"
                    />

                <TextView
                    android:id="@+id/item_dl_size"
                    android:text="191.36MB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="14px"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_dl_rl"
                android:layout_width="130px"
                android:layout_height="64px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_fe5000"
                >

               <!-- <ProgressBar
                    android:id="@+id/item_dl_prog"
                    android:layout_width="130px"
                    android:layout_height="64px"
                    android:progressDrawable="@drawable/progress_color"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    />-->
                <TextView
                    android:id="@+id/item_dl_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="下载"
                    android:textColor="@color/color_fe5000"
                    android:textSize="24px"
                    android:lines="1"

                    />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bfbfbf"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>


</LinearLayout>