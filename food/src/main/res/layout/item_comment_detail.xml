<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x20">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/y72"
        android:layout_height="@dimen/y72"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvManName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:text="日食记"
        android:textColor="@color/c_99"
        android:textSize="@dimen/y24"
        app:layout_constraintLeft_toRightOf="@id/ivIcon" />

    <com.aibabel.food.custom.ratingbar.XRatingBar xmlns:xRatingBar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rbStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@id/tvManName"
        app:layout_constraintTop_toBottomOf="@id/tvManName"
        xRatingBar:dividerWidth="@dimen/x7"
        xRatingBar:numStars="5" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-08-08"
        android:textColor="@color/c_99"
        android:textSize="@dimen/y20"
        app:layout_constraintBottom_toBottomOf="@id/tvManName"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海鲜·日本料理·寿司"
        android:textColor="@color/c_33"
        android:textSize="@dimen/y24"
        app:layout_constraintLeft_toLeftOf="@id/tvManName"
        app:layout_constraintTop_toBottomOf="@id/rbStar" />

</android.support.constraint.ConstraintLayout>
