<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20">

    <ImageView
        android:id="@+id/ivTitleCloseBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbTab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/shape_line"
            android:padding="@dimen/y5"
            android:text="餐厅信息"
            android:textColor="@color/c_66"
            android:textSize="@dimen/y22" />

        <!--<View-->
        <!--android:layout_width="@dimen/x1"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="@dimen/y5"-->
        <!--android:background="@color/c_33" />-->

        <RadioButton
            android:id="@+id/rbTab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableBottom="@drawable/shape_line"
            android:padding="@dimen/y5"
            android:text="推荐菜品"
            android:textColor="@color/c_66"
            android:textSize="@dimen/y22" />

        <!--<View-->
        <!--android:layout_width="@dimen/x1"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="@dimen/y5"-->
        <!--android:background="@color/c_33" />-->

        <RadioButton
            android:id="@+id/rbTab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableBottom="@drawable/shape_line"
            android:padding="@dimen/y5"
            android:text="用户点评"
            android:textColor="@color/c_66"
            android:textSize="@dimen/y22" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
