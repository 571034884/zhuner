<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y20">

    <com.aibabel.food.custom.circleimage.CustomRoundAngleImageView
        android:id="@+id/ivKindIcon"
        android:layout_width="@dimen/x214"
        android:layout_height="@dimen/y88"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        roundiv:radius="@dimen/y10" />

    <TextView
        android:id="@+id/tvKindName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:textColor="@color/c_33"
        android:textSize="@dimen/y24"
        app:layout_constraintBottom_toBottomOf="@id/ivKindIcon"
        app:layout_constraintLeft_toLeftOf="@id/ivKindIcon"
        app:layout_constraintTop_toTopOf="@id/ivKindIcon" />

</android.support.constraint.ConstraintLayout>
