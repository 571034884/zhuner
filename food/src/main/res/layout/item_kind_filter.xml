<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:roundiv="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@color/white"
                                             android:layout_height="wrap_content"
                                             android:padding="@dimen/x20">

    <com.aibabel.food.custom.circleimage.CustomRoundAngleImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/y136"
        android:layout_height="@dimen/y136"
        android:scaleType="centerCrop"
        roundiv:radius="@dimen/y10"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:text="日食记"
        android:textColor="@color/c_33"
        android:textSize="@dimen/y30"
        app:layout_constraintLeft_toRightOf="@id/ivIcon"/>

    <com.aibabel.food.custom.ratingbar.XRatingBar xmlns:xRatingBar="http://schemas.android.com/apk/res-auto"
                                                  android:id="@+id/rbStar"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_marginTop="@dimen/y12"
                                                  android:gravity="center_vertical"
                                                  app:layout_constraintLeft_toLeftOf="@id/tvName"
                                                  app:layout_constraintTop_toBottomOf="@id/tvName"
                                                  xRatingBar:dividerWidth="@dimen/x7"
                                                  xRatingBar:numStars="5"/>

    <TextView
        android:id="@+id/tvManPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textColor="@color/red"
        android:textSize="@dimen/y20"
        app:layout_constraintLeft_toRightOf="@id/rbStar"
        app:layout_constraintTop_toTopOf="@id/rbStar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/人"
        android:textColor="@color/c_66"
        android:textSize="@dimen/y20"
        app:layout_constraintLeft_toRightOf="@id/tvManPay"
        app:layout_constraintTop_toTopOf="@id/rbStar"/>


    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海鲜·日本料理·寿司"
        android:textColor="@color/c_66"
        android:textSize="@dimen/y20"
        app:layout_constraintBottom_toBottomOf="@id/ivIcon"
        app:layout_constraintLeft_toLeftOf="@id/tvName"/>

</android.support.constraint.ConstraintLayout>
