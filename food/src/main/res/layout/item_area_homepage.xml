<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y20">

    <com.aibabel.food.custom.circleimage.CustomRoundAngleImageView
        android:id="@+id/ivAreaIcon"
        android:layout_width="@dimen/y88"
        android:layout_height="@dimen/y88"
        android:src="@mipmap/ic_launcher"
        roundiv:radius="@dimen/y10"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAreaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y12"
        android:textColor="@color/c_33"
        android:textSize="@dimen/y24"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@id/ivAreaIcon"
        app:layout_constraintRight_toRightOf="@id/ivAreaIcon"
        app:layout_constraintTop_toBottomOf="@id/ivAreaIcon" />

</android.support.constraint.ConstraintLayout>
