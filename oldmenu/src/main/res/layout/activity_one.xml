<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="com.example.root.testhuaping.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="1px"
            android:drawableTop="@mipmap/google_tishi"
            android:textSize="30px"
            android:textColor="#FFFFFF"
            android:id="@+id/语音秘书" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fanyihanzi4"
            android:layout_width="370px"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="20px"
            android:text="@string/google_tishi"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_marginTop="150px"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jinru1"
            android:layout_width="380px"
            android:layout_height="72px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bg"
            android:text="@string/jiushiyong"
            android:textColor="#ffffff"
            android:textSize="32px" />
    </RelativeLayout>

</LinearLayout>