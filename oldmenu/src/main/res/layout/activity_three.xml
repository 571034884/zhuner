<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="com.example.root.testhuaping.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/fanhui31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_marginTop="44px"
            android:padding="10px"
            android:gravity="left"
            android:src="@mipmap/guanbi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56px"
        android:id="@+id/语音秘书"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@mipmap/gj_yuyinmishu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:text="语音秘书"
            android:textSize="36px"
            android:textColor="#FFFFFF"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="268px"
        android:layout_marginTop="64px"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fanyihanzi4"
            android:layout_width="480px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="12px"
            android:text="通过语音交互，就能轻松查询导航、汇率、天气等信息，享受便捷服务。"
            android:textSize="28px"
            android:textScaleX="1.0"
            android:textColor="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jinru31"
            android:layout_width="400px"
            android:layout_height="72px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bgg"
            android:text="点击进入"
            android:textColor="#444444"
            android:textSize="32px"
            android:layout_marginBottom="0px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_marginTop="24px"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fanyihanzi5"
            android:layout_width="460px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="24px"
            android:textScaleX="1.0"
            android:textColor="#fe5000"
            android:layout_marginBottom="160px"/>
    </RelativeLayout>

</LinearLayout>