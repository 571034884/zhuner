    <style name="textview_style" >
        <item name="android:layout_width">360px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">20px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="ll_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0px</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="line" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">72px</item>
        <item name="android:layout_marginRight">72px</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">#999999</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
