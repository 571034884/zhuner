<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:id="@+id/Lin_language">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px44"
        android:layout_marginBottom="@dimen/px28"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView

            android:id="@+id/newlan_text"
            android:layout_marginLeft="@dimen/px44"
            android:textStyle="bold"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择语言"
            android:textColor="#fff"
            android:textSize="@dimen/px40"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginRight="@dimen/px44"
            android:layout_width="wrap_content"
            android:src="@mipmap/close"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/elv_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ExpandableListView>

</LinearLayout>
