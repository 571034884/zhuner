<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <!--返回和选择语言-->
    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px84"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px30"
            android:background="@mipmap/ic_back"
            android:layout_marginLeft="@dimen/px20"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_orLan"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_modify"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="日本语"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:background="@mipmap/ic_change"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10" />

        <TextView
            android:id="@+id/tv_tranLan"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_modify"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/tv_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:background="@mipmap/ic_flashclose"
            android:layout_marginRight="@dimen/px20" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/take_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <com.aibabel.ocr.widgets.CameraPreview
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--刮刮卡底图-->
        <!-- <com.aibabel.ocr.widgets.DstView
             android:id="@+id/dstImage"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@+id/ll_choose"
             android:visibility="gone"/>-->
        <ImageView
            android:id="@+id/dstImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <!--  <View
              android:id="@+id/view_focus"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerInParent="true"
              android:background="@null"/>-->
        <com.aibabel.ocr.widgets.FocusView
            android:id="@+id/view_focus"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px120"
            android:visibility="gone"
            android:layout_centerInParent="true" />

        <com.aibabel.ocr.widgets.FocusImageView
            android:id="@+id/fv_focus"
            android:layout_width="@dimen/px136"
            android:layout_height="@dimen/px136"
            camera:focus_focusing_id="@drawable/focus_focusing"
            camera:focus_success_id="@drawable/focus_focused"
            camera:focus_fail_id="@drawable/focus_focus_failed" />

        <!--网格参考线-->
        <com.aibabel.ocr.widgets.ReferenceLine
            android:id="@+id/rl_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/px16"
            android:layout_centerInParent="true"
            android:textColor="#60e0e0e0"
            android:visibility="invisible"
            android:lineSpacingMultiplier="1.0"
            android:text="@string/keep_balance"/>

        <com.aibabel.ocr.widgets.Guaguaka
            android:id="@+id/guaguaka"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.aibabel.ocr.widgets.OcrDisplayView
            android:id="@+id/ocrDisplayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fl_tran"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px515"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px20"
            android:paddingLeft="@dimen/px60"
            android:paddingRight="@dimen/px60"
            android:paddingStart="@dimen/px60" />

        <!--拍照和设置-->
        <RelativeLayout
            android:id="@+id/rl_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_meau"
            android:padding="@dimen/px12">

            <ImageView
                android:id="@+id/iv_take_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_setting"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/camera_bg" />
        </RelativeLayout>
        <!--确认和重拍-->
        <RelativeLayout
            android:id="@+id/rl_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_meau"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/px12"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_recamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/px12"
                android:visibility="gone"
                android:src="@mipmap/ic_recamera" />


            <ImageView
                android:id="@+id/iv_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/px12"
                android:visibility="gone"
                android:src="@mipmap/ic_translation" />
        </RelativeLayout>
        <!--文章和菜单-->
        <RelativeLayout
            android:id="@+id/rl_meau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/px0">

            <RadioGroup
                android:id="@+id/rg_meau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20">

                <RadioButton
                    android:id="@+id/rb_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:paddingBottom="@dimen/px8"
                    android:paddingLeft="@dimen/px20"
                    android:paddingRight="@dimen/px20"
                    android:paddingTop="@dimen/px8"
                    android:text="@string/object"
                    android:textColor="#F2F2F2"
                    android:textSize="@dimen/px24" />
                <RadioButton
                    android:id="@+id/rb_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:paddingBottom="@dimen/px8"
                    android:paddingLeft="@dimen/px20"
                    android:paddingRight="@dimen/px20"
                    android:paddingTop="@dimen/px8"
                    android:text="@string/meau"
                    android:textColor="#F2F2F2"
                    android:textSize="@dimen/px24" />

                <RadioButton
                    android:id="@+id/rb_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:paddingBottom="@dimen/px8"
                    android:paddingLeft="@dimen/px20"
                    android:paddingRight="@dimen/px20"
                    android:paddingTop="@dimen/px8"
                    android:text="@string/artical"
                    android:textColor="#F2F2F2"
                    android:textSize="@dimen/px24" />
            </RadioGroup>
            <Button
                android:visibility="gone"
                android:id="@+id/b_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择服务器地址"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
