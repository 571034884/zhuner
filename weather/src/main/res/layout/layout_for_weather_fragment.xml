<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/px80">

    <LinearLayout
        android:id="@+id/ll_weather"
        android:layout_width="@dimen/px0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px72"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20">

            <TextView
                android:id="@+id/tv_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jintian"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_weather1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tq_qingtian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_max_min1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9~31"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px72"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20">

            <TextView
                android:id="@+id/tv_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mingtina"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_weather2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tq_qingtian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_max_min2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9~31"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px72"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20">

            <TextView
                android:id="@+id/tv_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_weather3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tq_qingtian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_max_min3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9~31"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px72"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20">

            <TextView
                android:id="@+id/tv_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_weather4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tq_qingtian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_max_min4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9~31"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_line2"
        android:layout_width="@dimen/px0"
        android:layout_height="@dimen/px1"
        android:background="#4dffffff"
        app:layout_constraintBottom_toTopOf="@id/ll_weather"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_weather_for_hour"
        android:layout_width="@dimen/px0"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/v_line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/v_line1"
        android:layout_width="@dimen/px0"
        android:layout_height="@dimen/px1"
        android:background="#4dffffff"
        app:layout_constraintBottom_toTopOf="@id/rv_weather_for_hour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/ll_kongqizhiling"
        android:layout_width="@dimen/px0"
        android:layout_height="@dimen/px100"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/v_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px12"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#ffffff"
                android:textSize="@dimen/px32"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shidu"
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px48"
            android:layout_gravity="center_vertical"
            android:background="#4dffffff"></View>

        <LinearLayout
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px12"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fengsu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#ffffff"
                android:textSize="@dimen/px32"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fengsu"
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />

        </LinearLayout>


        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px48"
            android:layout_gravity="center_vertical"
            android:background="#4dffffff"></View>

        <LinearLayout
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px12"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jiangshuiliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textColor="#ffffff"
                android:textSize="@dimen/px32"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiangshuiliang"
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />


        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ll_kongqizhiling"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="28"
            android:textColor="@color/colorWendu"
            android:textSize="@dimen/px140"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="Â°"
            android:textColor="@color/colorWendu"
            android:textSize="@dimen/px140"
            app:layout_constraintLeft_toRightOf="@id/tv_wendu" />

        <LinearLayout
            android:id="@+id/ll_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wendu">

            <TextView
                android:id="@+id/tv_shijian_yangli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />

            <TextView
                android:id="@+id/tv_shijian_xingqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:text=""
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />

            <TextView
                android:id="@+id/tv_shijian_yinli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:text=""
                android:textColor="#eeeeee"
                android:textSize="@dimen/px24" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
