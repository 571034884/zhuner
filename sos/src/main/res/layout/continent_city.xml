<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/text_size6"
    android:paddingRight="@dimen/text_size6">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="@dimen/text_size80"
        android:layout_height="@dimen/text_size80"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginRight="@dimen/px10" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/text_size28"
        android:layout_marginTop="@dimen/text_size16"
        android:gravity="center_horizontal"
        android:textColor="@color/whiteff"
        android:textSize="@dimen/text_size24" />
</LinearLayout>