<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black00"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.SousuoActivity">

    <include
        android:id="@+id/i_title"
        layout="@layout/layout_unified_title" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sousuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px0"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_title" />

    <com.aibabel.sos.custom.MyRecyclerView
        android:id="@+id/rv_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px0"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_title" />

    <ImageView
        android:id="@+id/iv_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_title" />

</android.support.constraint.ConstraintLayout>