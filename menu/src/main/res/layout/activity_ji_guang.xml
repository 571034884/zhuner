<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.aibabel.messagemanage.JiGuangActivity">

    <RelativeLayout
        android:id="@+id/rell1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:padding="10px"
            android:text="标题"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="20px"
            android:minHeight="160px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:text="内容"
            android:textSize="28px" />

        <View
            android:id="@+id/v_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_content"
            android:background="@color/c_f3f3f3" />


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:singleLine="true"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="@color/c_666"
                android:text="我知道了" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_confirm2"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:singleLine="true"
                android:textSize="30px"
                android:text="马上去使用"
                android:textColor="@color/c_ff0000" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:singleLine="true"
                    android:text="取消"
                    android:textColor="@color/c_666"
                    android:textSize="30px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/dialog_change_btm_ll"
                    android:background="@color/c_f3f3f3" />

                <TextView
                    android:id="@+id/tv_confirm4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:singleLine="true"
                    android:text="马上去使用"
                    android:textColor="@color/c_ff0000"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>