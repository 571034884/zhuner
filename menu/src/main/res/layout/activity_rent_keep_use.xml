<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rent_keepuse_relat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20"
    tools:context=".rent.RentKeepUseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/keep_Relativ_layout"
        android:background="@drawable/shape_corners">

        <LinearLayout
            android:id="@+id/ku_layout_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/keepuser_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x62"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/y8"
                android:textColor="#333333"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/hotline_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/x30"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/hotline_qrcode"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/x230"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginBottom="@dimen/x30"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/keepusegrayview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@id/ku_layout_show"
            android:background="#ebebeb"></View>

        <LinearLayout
            android:id="@+id/rent_keepuser_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x98"
            android:layout_below="@id/keepusegrayview"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>