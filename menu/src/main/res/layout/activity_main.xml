<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/mian_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></WebView>

    <LinearLayout
        android:id="@+id/main_return_img_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x20"
        android:paddingTop="@dimen/y30"
        >
        <ImageView
            android:id="@+id/main_return_img"
            android:layout_marginTop="@dimen/y8"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/mdd_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </LinearLayout>


    <RelativeLayout
      android:id="@+id/main_topPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/morentu1"
        app:layout_constraintHeight_percent="0.72"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"


        >
<!--        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_alpha_img"
            ></RelativeLayout>-->
        <LinearLayout
            android:id="@+id/main_top_ctiy_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y75"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"

            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/main_top_ctiy_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_top_location_icn"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/x7"
                android:layout_marginRight="-10px"

                />
            <com.aibabel.menu.view.MagicTextView
                android:id="@+id/main_top_ctiy"
                xmlns:qwerjk="http://schemas.android.com/apk/res/com.aibabel.menu"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                qwerjk:outerShadowDy="2"
                qwerjk:outerShadowColor="#33000000"
                android:padding="@dimen/x10"
                qwerjk:outerShadowRadius="15"
                android:textColor="@color/clr_fff"
                android:textSize="@dimen/y48"
                android:text="--·--" />

        </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_bottomPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1"



        >

              <ImageView
                  android:id="@+id/main_shanghua_img"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  />



          <LinearLayout
              android:id="@+id/main_middle_ll"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y140"
              android:layout_marginLeft="@dimen/x10"
              android:layout_marginRight="@dimen/x10"
              android:layout_marginBottom="@dimen/y10"
              android:background="@drawable/shape_alpha_fff"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal"

              >
              <RelativeLayout
                  android:id="@+id/main_middle_time_ll"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3.5"
                  android:orientation="vertical"

                  android:paddingTop="@dimen/y24"
                  android:background="?android:attr/selectableItemBackground"
                  >
                  <TextClock
                      android:id="@+id/main_middle_time"
                      android:text="20:40"
                      android:textColor="@color/clr_333"
                      android:textSize="@dimen/y52"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:format24Hour="HH:mm"
                      android:includeFontPadding="false"
                      android:layout_centerHorizontal="true"
                      />
                  <TextClock
                      android:id="@+id/main_middle_date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/clr_666"
                      android:textSize="@dimen/y24"
                      android:text="2018-12-14"
                      android:format24Hour="yyyy-MM-dd"
                      android:layout_alignParentBottom="true"
                      android:layout_centerHorizontal="true"
                      android:layout_marginBottom="@dimen/y24"
                      android:includeFontPadding="false"
                      android:layout_marginLeft="@dimen/x8"
                      />
              </RelativeLayout>
              <View
                  android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:background="@color/clr_f3f3f3"
                  android:layout_marginTop="@dimen/y28"
                  android:layout_marginBottom="@dimen/y28"
                  />
              <RelativeLayout
                  android:id="@+id/main_middle_tianqi_ll"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3"
                  android:orientation="vertical"

                  android:paddingTop="@dimen/y24"
                  android:background="?android:attr/selectableItemBackground"
                  >
                  <TextView
                      android:id="@+id/main_middle_tianqi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/clr_666"
                      android:textSize="@dimen/y24"
                      android:text="天气"
                      android:includeFontPadding="false"
                      android:layout_alignParentBottom="true"
                      android:layout_marginBottom="@dimen/y24"
                      android:layout_centerHorizontal="true"
                      />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerHorizontal="true"
                      >
                      <TextView
                          android:id="@+id/main_middle_tianqi_du"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/clr_333"
                          android:textSize="@dimen/y52"
                          android:text="--·--"
                          android:includeFontPadding="false"
                          />
                      <TextView
                          android:id="@+id/main_middle_tianqi_du1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/clr_333"
                          android:textSize="@dimen/y26"
                          android:text=""
                          android:includeFontPadding="false"
                         android:layout_marginLeft="@dimen/x5"

                          />
                  </LinearLayout>

              </RelativeLayout>
              <View
                  android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:background="@color/clr_f3f3f3"
                  android:layout_marginTop="@dimen/y28"
                  android:layout_marginBottom="@dimen/y28"
                  />
              <RelativeLayout
                  android:id="@+id/main_middle_huilv_ll"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3.5"
                  android:paddingTop="@dimen/y24"

                  android:orientation="vertical"
                  android:background="?android:attr/selectableItemBackground"
                  >
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerHorizontal="true"
                      >
                      <TextView
                          android:id="@+id/main_middle_huilv_top1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/clr_333"
                          android:textSize="@dimen/y52"
                          android:text="--·--"
                          android:includeFontPadding="false"
                          />
                      <TextView
                          android:id="@+id/main_middle_huilv_top2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/clr_333"
                          android:textSize="@dimen/y34"
                          android:text=""
                          android:includeFontPadding="false"
                          android:layout_marginLeft="@dimen/x5"

                          />
                  </LinearLayout>
           <!--       <com.aibabel.menu.view.SingleLineZoomTextView
                      android:id="@+id/main_middle_huilv1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/clr_333"
                      android:textSize="26sp"
                      android:text="1≈16.17"

                     android:layout_centerHorizontal="true"
                      android:includeFontPadding="false"
                      />-->
                  <TextView
                      android:id="@+id/main_middle_huilv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/clr_666"
                      android:textSize="@dimen/y24"
                      android:text="汇率"
                      android:includeFontPadding="false"
                      android:layout_alignParentBottom="true"
                      android:layout_marginBottom="@dimen/y24"
                      android:layout_centerHorizontal="true"
                      />

              </RelativeLayout>




      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.28"
            android:padding="@dimen/x10"
            android:background="@color/clr_f3f3f3"
            >
            <RelativeLayout
                android:id="@+id/main_map_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:background="?android:attr/selectableItemBackground"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/menu_map_bg"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/main_map_local_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/x360"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/y22"
                    android:textColor="#999"
                    android:lineSpacingMultiplier="1.2"
                    android:text="--·--"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <ImageView
                    android:id="@+id/main_map_jinru_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantou"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x10"
                    />
                <TextView
                    android:id="@+id/main_map_jinru_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/main_map_jinru_img"
                    android:layout_marginRight="@dimen/x10"
                    android:textColor="@color/clr_333"
                    android:textSize="@dimen/y24"
                    android:text="查看地图"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y10"
                >
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_yyfy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fff"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_yyfy"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y20"
                        android:textColor="@color/clr_333"
                        android:text="语音翻译"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_pzfy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fff"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_pzfy"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y20"
                        android:textColor="@color/clr_333"
                        android:text="拍照翻译"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_ddwl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fff"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_dangdiwanle"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y20"
                        android:textColor="@color/clr_333"
                        android:text="当地玩乐"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_gd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/shape_fff"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    android:transitionName="shareName"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_gengduo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y20"
                        android:textColor="@color/clr_333"
                        android:text="更多"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>