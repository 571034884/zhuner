<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/mian_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></WebView>

    <LinearLayout
        android:id="@+id/main_return_img_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x20"
        android:paddingTop="@dimen/y30"
        >
        <ImageView
            android:id="@+id/main_return_img"
            android:layout_marginTop="@dimen/y8"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/mdd_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </LinearLayout>


    <RelativeLayout
      android:id="@+id/main_topPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/morentu1"
        app:layout_constraintHeight_percent="0.72"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"


        >
<!--        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_alpha_img"
            ></RelativeLayout>-->
        <LinearLayout
            android:id="@+id/main_top_ctiy_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:background="@drawable/location_city_bg"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/main_top_ctiy_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_top_location_icn"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/main_top_ctiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="20sp"
                android:text="--·--" />

        </LinearLayout>


        <!--android:minWidth="48dp"-->
        <!--android:minHeight="48dp"-->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_notice_fff"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/notice_start_activity"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/home_badge_icon"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@mipmap/notice"
                    android:scaleType="center"
                    />

                <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
                    android:id="@+id/home_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:textSize="10sp"
                    android:background="#EF4738"
                    tools:ignore="EllipsizeMaxLines" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_bottomPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1">
        <ImageView
            android:id="@+id/main_shanghua_img"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/icon_menu_shanghua"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="在图片上上滑试试"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/main_menu_left_right_bg"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_middle_ll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@mipmap/icon_menu_clock_timer"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/main_middle_time_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground"
                    >

                    <TextView
                        android:id="@+id/text_view_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--·--"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:layout_centerHorizontal="true"
                        />
                    <TextClock
                        android:layout_below="@id/text_view_address_city"
                        android:id="@+id/main_middle_time"
                        android:text="20:40"
                        android:textColor="#666666"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format24Hour="HH:mm"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        />
                    <TextClock
                        android:id="@+id/main_middle_date"
                        android:layout_below="@id/main_middle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="2018-12-14"
                        android:format24Hour="yyyy-MM-dd"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_middle_tianqi_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">
                    <LinearLayout
                        android:id="@+id/linear_tianqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        >
                        <TextView
                            android:id="@+id/main_middle_tianqi_du"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:text="--·--"
                            android:includeFontPadding="false"
                            />

                        <TextView
                            android:id="@+id/main_middle_tianqi_du1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="#666666"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/main_middle_tianqi"
                        android:layout_below="@id/linear_tianqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="天气"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F9F9F9"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/main_middle_huilv_ll"
                    android:layout_width="0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_main_huilv"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_huilv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_menu_huilvs"
                        />
                    <TextView
                        android:id="@+id/tv_huilvone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_huilv"
                        android:text="--·--"
                        android:layout_marginLeft="5dp"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tv_huilvtwo"
                        android:layout_below="@id/tv_huilvone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_huilv"
                        android:text="--·--"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FF8B01"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="20dp"
                        android:text="今日汇率"
                        android:id="@+id/textView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="97dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:text="在图片上上滑试试"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_map_rl"
                    android:layout_width="0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_main_ditu"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/main_map_local_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:lineSpacingMultiplier="1"
                        android:text="--·--"
                        />
                    <TextView
                        android:id="@+id/main_map_jinru_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="20dp"
                        android:text="查看地图"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_yyfy"
                    android:layout_width="0dp"
                    android:paddingLeft="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_yyfy_layout"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_yyfy"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:text="语音翻译"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_pzfy"
                    android:layout_width="0dp"
                    android:paddingLeft="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_pzfy_layout"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_pzfy"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:text="拍照翻译"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_ddwl"
                    android:layout_width="0dp"
                    android:paddingLeft="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_jqdl_layout"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_jqdl"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:text="景区导览"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bttom_menu_ll_gd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_gengduo_layout"
                    android:gravity="center_vertical"
                    android:transitionName="shareName"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_gengduo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:text="更多功能"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>