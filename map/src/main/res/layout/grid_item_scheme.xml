<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y20"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_route_name_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="方案一"
            android:textColor="@color/c_33"
            android:textSize="@dimen/y20" />

        <TextView
            android:id="@+id/tv_route_min_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_route_name_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y16"
            android:text="40分钟"
            android:textColor="@color/c_33"
            android:textSize="@dimen/y32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_route_min_one"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_route_km_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="19.6公里"
                android:textColor="@color/c_33"
                android:textSize="@dimen/y20" />

            <ImageView

                android:visibility="gone"
                android:id="@+id/tv_route_light_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:src="@mipmap/ic_light_select" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_route_lightnum_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x5"
                android:text="5"
                android:textColor="@color/c_red"
                android:textSize="@dimen/y20" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>