<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y160"
    android:layout_marginEnd="@dimen/x20"
    android:layout_marginStart="@dimen/x20"
    android:background="@drawable/bg_cardview"
    android:padding="@dimen/d5">

    <ImageView
        android:id="@+id/iv_desc"
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/y140"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:transitionName="image"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_label" />

    <TextView
        android:id="@+id/tv_ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/c_00"
        android:textSize="@dimen/s14"
        android:transitionName="ch"
        app:layout_constraintLeft_toRightOf="@id/iv_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/y4"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/c_66"
        android:textSize="@dimen/s12"
        android:transitionName="en"
        app:layout_constraintLeft_toRightOf="@id/iv_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_ch" />


    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginStart="@dimen/x10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/c_99"
        android:textSize="@dimen/s10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_desc"
        app:layout_constraintRight_toLeftOf="@id/tv_distance" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:ellipsize="end"
        android:gravity="right"
        android:paddingLeft="@dimen/x10"
        android:singleLine="true"
        android:text="1000m"
        android:textColor="@color/c_66"
        android:textSize="@dimen/s10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

