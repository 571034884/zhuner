<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ff"
    android:orientation="vertical">

    <include layout="@layout/route_info_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_devicewalk"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/mv_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>

            <include layout="@layout/route_bottom_layout" />
            <include layout="@layout/route_bottom_layout_error" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_transit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/rl_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:onClick="onClick"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y10"
                    android:background="@color/c_f3"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y72">
                    <ImageView
                        android:id="@+id/iv_coike"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clock"
                        android:layout_marginLeft="@dimen/x10"
                        />
                    <TextView
                        android:id="@+id/tv_timer_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/c_33"
                        android:textSize="@dimen/y24"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_toEndOf="@+id/iv_coike"
                        android:text="现在出发" />
                    <ImageView
                        android:id="@+id/iv_inout"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_open_popu"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x10"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y10"
                    android:background="@color/c_f3"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/lv_transit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_timer"
                android:divider="@null"
                android:scrollbars="none"></ListView>

            <LinearLayout
                android:id="@+id/ll_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_transit_error" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:text="暂未获取到相关信息" />
            </LinearLayout>
            <View
                android:id="@+id/route_view"
                android:visibility="gone"
                android:layout_below="@id/rl_timer"
                android:layout_width="match_parent"
                android:background="#80000000"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>