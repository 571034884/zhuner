<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/y20"
    android:paddingBottom="@dimen/y20"
    android:background="@color/c_ff"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:src="@mipmap/ic_return"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rl_startend_bg"
        android:layout_marginRight="@dimen/y20"
        android:layout_marginLeft="@dimen/y10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_loca"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y72"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center_vertical"
                android:background="@drawable/et_startend_bg"
                android:hint="我的位置"
                android:inputType="text"
                android:textColorHint="@color/c_99"
                android:textColor="@color/c_33"
                android:textSize="@dimen/y28"
                android:maxLines="1"
                android:ellipsize = "end"
                />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ebebeb"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@mipmap/ic_sousuo"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>