<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_ff"
    android:orientation="vertical"
    android:elevation="@dimen/y5"
    android:paddingTop="@dimen/y20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@mipmap/ic_return" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginRight="@dimen/y20"
            android:background="@drawable/rl_startend_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y72"
                    android:layout_marginLeft="@dimen/y30"
                    android:background="@drawable/et_startend_bg"
                    android:drawableLeft="@mipmap/ic_end_search"
                    android:drawablePadding="@dimen/y16"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingTop="@dimen/y20"
                    android:maxLines="1"
                    android:ellipsize = "end"
                    android:text="我的位置"
                    android:textColor="@color/c_33"
                    android:textSize="@dimen/y28" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x34"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_route" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x25"
                        android:background="#ebebeb" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y72"
                    android:layout_marginLeft="@dimen/y30"
                    android:background="@drawable/et_startend_bg"
                    android:drawableLeft="@mipmap/ic_start_search"
                    android:drawablePadding="@dimen/y16"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingBottom="@dimen/y20"
                    android:maxLines="1"
                    android:ellipsize = "end"
                    android:text="泰跃商务大厦"
                    android:textColor="@color/c_33"
                    android:textSize="@dimen/y28" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@mipmap/ic_change" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_bar"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="#ff0000"
        app:tabTextColor="#333333"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_height="wrap_content"/>
</LinearLayout>