<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_less"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="@dimen/y30">
        <TextView
            android:id="@+id/scheme_one_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40分钟"
            android:textColor="@color/c_33"
            android:textSize="@dimen/y32" />
        <TextView
            android:id="@+id/scheme_one_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scheme_one_min"
            android:layout_marginLeft="@dimen/x24"
            android:text="19.6公里"
            android:textColor="@color/c_33"
            android:textSize="@dimen/y32" />
        <ImageView
            android:id="@+id/tv_route_light"
            android:layout_toRightOf="@id/scheme_one_km"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/x24"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_light_default" />

        <TextView
            android:id="@+id/tv_route_lightnum"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_toRightOf="@id/tv_route_light"
            android:layout_marginLeft="@dimen/x5"
            android:text="5"
            android:textColor="@color/c_33"
            android:textSize="@dimen/y20" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/c_eb" />

    <TextView
        android:id="@+id/scheme_one_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y72"
        android:gravity="center"
        android:onClick="onClick"
        android:text="查看详情"
        android:textColor="@color/c_33"
        android:textSize="@dimen/y26" />
</LinearLayout>