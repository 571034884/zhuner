<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_180"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
<TextView
    android:id="@+id/tv_city_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#0a0a0a"
    android:textSize="@dimen/px_24"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/view"
        android:layout_width="0pt"
        android:layout_height="@dimen/px_1"
        android:background="#e3e3e3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/px_25"
        app:layout_constraintTop_toBottomOf="@id/tv_city_address"/>

    <View
        android:layout_width="@dimen/px_1"
        android:layout_height="@dimen/px_28"
        android:background="#e3e3e3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view"
        />

</android.support.constraint.ConstraintLayout>