<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    android:orientation="vertical"
    tools:context=".activity.LauncherActivity">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/px_50"
        android:drawableTop="@mipmap/listeren"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="@dimen/px_30"
        android:layout_marginTop="@dimen/px320"
        android:layout_gravity="center" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="36px"
        android:drawableTop="@drawable/beijing"
        android:gravity="center"
        android:text="听见，时光背后的故事"
        android:textColor="#333333"
        android:textSize="28px"
        android:layout_marginTop="160px"
        android:layout_gravity="center" />
</LinearLayout>