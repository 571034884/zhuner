<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_6"
    android:paddingRight="@dimen/px_6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="@dimen/px_244"
            android:layout_height="@dimen/px_150"
            android:scaleType="center" />
        <ImageView
            android:id="@+id/iv_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/download" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/px_28"
        android:layout_marginTop="@dimen/px_16"
        android:textColor="#424242"
        android:textSize="@dimen/px_24" />
</LinearLayout>