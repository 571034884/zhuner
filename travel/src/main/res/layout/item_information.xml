<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_170"
        android:layout_marginTop="@dimen/px_8"
        android:paddingTop="@dimen/px_30"
        android:paddingRight="@dimen/px_20"
        android:background="@drawable/bg_item"
        android:paddingBottom="@dimen/px_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_spot"
            android:layout_width="@dimen/px_110"
            android:layout_height="@dimen/px_110"
            android:layout_marginLeft="@dimen/px_20"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_3e"
                android:textSize="@dimen/px_28" />

            <TextView
                android:id="@+id/tv_city_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_des"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_8c"
                android:textSize="@dimen/px_24" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
