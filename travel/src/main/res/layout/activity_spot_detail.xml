<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:layout_marginTop="@dimen/px_52"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginBottom="@dimen/px_20"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_kongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/px_110"
        android:layout_marginBottom="@dimen/px_20"
        android:paddingLeft="@dimen/px_94"
        android:paddingRight="@dimen/px_94"
        app:layout_constraintBottom_toTopOf="@id/rv">

        <ImageView
            android:id="@+id/iv_last_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_38"
            android:background="@mipmap/lastone" />

        <ImageView
            android:id="@+id/iv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_38"
            android:background="@mipmap/start" />

        <ImageView
            android:id="@+id/iv_next_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nextone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_scenery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="@dimen/px_30"
        android:textSize="@dimen/px_30"
        app:layout_constraintBottom_toTopOf="@id/ll_kongzhi" />
    <!--显示播放进度-->
    <LinearLayout
        android:id="@+id/ll_shijian"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/px_10"
        app:layout_constraintBottom_toTopOf="@id/tv_scenery_name">

        <SeekBar
            android:id="@+id/seekber"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_gravity="center"
            android:paddingEnd="0dp"
            android:paddingStart="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6">
            <!--显示当前进度-->
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="00:00"
                android:textColor="#000"
                android:textSize="@dimen/px_24" />

            <LinearLayout
                android:id="@+id/dialog_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_progress"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="0px">

                <ImageView
                    android:id="@+id/imgDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loading_image" />
            </LinearLayout>
            <!--显示总进度-->
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:text="00:00"
                android:textColor="#000"
                android:textSize="@dimen/px_24" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px0"
        app:layout_constraintBottom_toTopOf="@id/ll_shijian"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/color_tr">

            <ImageView
                android:id="@+id/iv_scenery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_466"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_102"
            android:lineSpacingExtra="@dimen/px_10"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#fff"
            android:textSize="@dimen/px_24"
            android:visibility="gone" />
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>