<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">
        <!--头像-->
        <ImageView
            android:id="@+id/iea_headImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/meinv"/>
        <!--录音框-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">
                <!--语音条-->
                <ImageView
                    android:id="@+id/iea_iv_voiceLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/yuyinkuang"
                    android:clickable="true"
                    android:focusable="true"
                    android:lineSpacingExtra="2dp"

                    />
                <!--信号栏-->
                <LinearLayout
                    android:id="@+id/iea_ll_singer"
                    android:layout_width="@dimen/text_size16"
                    android:layout_height="@dimen/text_size20"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/anim_yuyin_sign"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/iea_tv_voicetime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="60 ''"
                android:textColor="#969696"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/iea_iv_red"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/yuyin_tixing_red"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
