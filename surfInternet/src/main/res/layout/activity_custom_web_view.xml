<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.aibabel.surfinternet.js.CustomWebViewActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="424px"
            android:layout_height="428px"
            android:layout_centerInParent="true"
            android:background="#ededed" />

        <com.aibabel.surfinternet.js.AdvancedWebView
            android:id="@+id/webview_1"
            android:layout_width="384px"
            android:layout_height="388px"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/tv_payType"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weixin"
            android:layout_below="@id/webview_1"
            android:layout_marginTop="70px"
            android:layout_centerHorizontal="true"
            android:textSize="32px"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back" />

    <LinearLayout
        android:id="@+id/ll_isnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/isnet"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/iv_tishi1"
            android:layout_width="140px"
            android:layout_height="105px"
            android:layout_gravity="center_horizontal"
           />
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:text="@string/isnonet"
            android:textColor="#fff"
            android:textSize="30px" />
    </LinearLayout>
</RelativeLayout>