<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/more_travel_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/more_game_bg"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/y20"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/more_travel_game_bg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:text="玩乐攻略"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/more_scenic_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/more_scenic_bg"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingTop="@dimen/y20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_travel_scenic_bg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:text="景区导览"
                    />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/more_country_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/more_country_bg"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/y20"
                    android:paddingLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/more_travel_country_bg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:text="国家介绍"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/more_food_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/more_food_bg"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingTop="@dimen/y20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/more_travel_food_bg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:text="美食推荐"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/more_poortravel_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                android:visibility="visible"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@mipmap/more_default_bg"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/y20"
                        android:paddingLeft="@dimen/x20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/more_travel_poortravel_bg"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:text="穷游"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第三方"
                        android:background="@drawable/more_default_bg_sanfang"
                        android:textColor="@android:color/white"
                        android:layout_alignParentRight="true"
                        android:paddingHorizontal="@dimen/x10"
                        android:paddingVertical="@dimen/y3"
                        android:textSize="12sp"

                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                app:cardCornerRadius="16dp"
                app:cardElevation="@dimen/x5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/more_food_bg"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingTop="@dimen/y20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/more_travel_food_bg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:text="美食推荐"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>