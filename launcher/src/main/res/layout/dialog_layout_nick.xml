<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="264dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/bg_dialog_round"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">


        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/y8"
            android:text="请输入您的昵称"
            android:textColor="@color/clr_333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dialog_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_nick_edit"
            android:gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_66"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_citys"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="不修改将使用默认昵称"
            android:textColor="@color/color_66"
            android:textSize="12sp" />



            <TextView
                android:id="@+id/tv_dialog_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_nick"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:paddingVertical="8dp"
                android:text="确认"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>