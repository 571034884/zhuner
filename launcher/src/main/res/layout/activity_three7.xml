<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y50"
        android:layout_marginTop="@dimen/y20"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/个人热点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="#ffffff"
            android:textSize="@dimen/y40"
            android:text="@string/fenxiangredian"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/fanhui38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/guanbi"
            android:layout_marginRight="@dimen/x20" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:id="@+id/语音秘书"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y650"
            android:gravity="center"
            android:src="@mipmap/guanbire" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jinru34"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72"
            android:gravity="center"
            android:text="@string/shangboguanbi"
            android:textColor="#ffffff"
            android:textSize="@dimen/y36"
            android:layout_marginBottom="0px"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/y36"/>
    <TextView
        android:id="@+id/uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="@string/mima"
        android:textSize="@dimen/y36"/>
</LinearLayout>