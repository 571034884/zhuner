<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginRight="20px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guanbiyuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/guanbi"
                    android:textColor="#ffffff" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
	        android:id="@+id/wifi_con_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:text="@string/str_unconnect"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_22" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_wifi_id"
            android:layout_width="fill_parent"
            android:layout_height="70dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:text="@string/simple_fragment_wifi_title"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_22" />

            <Button
                android:id="@+id/wifi_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="115.0dip"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <com.dommy.qrcode.SwitchView
                android:id="@+id/switch_wifi"
                android:layout_width="120sp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp" />
        </RelativeLayout>

        <include layout="@layout/seprator_line" />

        <com.dommy.qrcode.MyListView
            android:id="@+id/freelook_listview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1.0dip"
            android:listSelector="#00000000" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/wifi_setting_pb"
        style="@style/wt_ocr_progress_bar_style"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />
</FrameLayout>