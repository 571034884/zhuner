<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.dommy.qrcode.MainActivity">


    <TextView
        android:id="@+id/t"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_zhanghaojihuo" />

    <LinearLayout
        android:id="@+id/uuu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/snhao"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LS1234567891234567"
            android:textSize="30px"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:lines="1"

            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="30px"
        android:baselineAligned="false"
        android:layout_below="@id/uuu"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_qrcode"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bg"
            android:text="@string/my_saomiaojihuoma"
            android:textColor="#ffffff"
            android:textSize="21dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="34dp"
        android:baselineAligned="false"
        android:layout_below="@id/uuu"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_chongzhi1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bg"
            android:text="@string/my_guihai"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="21dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_chongzhi"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bg"
            android:text="@string/my_shebeichongzhi"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="21dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_shengji"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cirle_btn_bg"
            android:text="@string/my_jianchagengxin"
            android:textColor="#ffffff"
            android:textSize="21dp" />


    </RelativeLayout>
</RelativeLayout>